<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.edgarhandev.shippossqueakytoysounds.shippossqueakytoysounds.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="Shippo's Toys"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/robin_toy_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/shippo_beg"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/robin_toy_button" />

    <ImageView
        android:id="@+id/bone_toy_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/bone_toy_button" />

    <ImageView
        android:id="@+id/squeaker_toy_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/shippo_beg"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/squeaker_button" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/shippo_beg"
        app:srcCompat="@drawable/shippo01"
        android:layout_centerVertical="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Sound!"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/adView"
        android:id="@+id/stop_button"
        />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5445092696369420/4235507493">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
